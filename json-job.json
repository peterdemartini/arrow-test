{
    "name": "JSON Table Test",
    "workers": 1,
    "lifecycle": "once",
    "assets": [
        "arrow-test"
    ],
    "apis": [
        {
            "_name": "table",
            "type": "json",
            "type_config": [
                [
                    "_key",
                    {
                        "type": "Keyword"
                    }
                ],
                [
                    "name",
                    {
                        "type": "Keyword"
                    }
                ],
                [
                    "age",
                    {
                        "type": "Short"
                    }
                ],
                [
                    "ssn",
                    {
                        "type": "Keyword"
                    }
                ],
                [
                    "favorite_animal",
                    {
                        "type": "Keyword"
                    }
                ],
                [
                    "ip",
                    {
                        "type": "IP"
                    }
                ],
                [
                    "phone",
                    {
                        "type": "Keyword"
                    }
                ],
                [
                    "birthday",
                    {
                        "type": "Date"
                    }
                ],
                [
                    "address",
                    {
                        "type": "Text"
                    }
                ],
                [
                    "alive",
                    {
                        "type": "Boolean"
                    }
                ]
            ]
        }
    ],
    "operations": [
        {
            "_op": "table_reader",
            "total": 10000000,
            "batch_size": 5000
        },
        {
            "_op": "table_sum",
            "field": "age"
        },
        {
            "_op": "table_filter",
            "filters": [
                {
                    "field": "age",
                    "value": 60,
                    "operator": "ge"
                },
                {
                    "field": "alive",
                    "value": true,
                    "operator": "eq"
                }
            ]
        },
        {
            "_op": "table_transform",
            "field": "age",
            "fn": "increment"
        }
    ]
}
